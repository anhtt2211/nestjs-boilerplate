{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@database/*": ["src/database/*"],
      "@media/*": ["src/media/*"],
      "@rabbitmq/*": ["src/rabbitmq/*"],
      "@redis/*": ["src/redis/*"],
      "@shared/*": ["src/shared/*"],
      "@user/*": ["src/user/*"]
    }
  },
  "include": ["src/**/*", "dist/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
